---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';

const calculators = [
  {
    title: 'Savings Calculator',
    description: 'Calculate your potential savings using digital coupons, cashback apps, and store rewards programs.',
    href: '/calculators/savings',
  }
];
---

<Layout 
  title="Money-Saving Calculators"
  description="Use our calculators to estimate your potential savings through digital coupons, cashback apps, and store rewards programs."
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-8">
      Money-Saving Calculators
    </h1>
    <p class="text-xl text-gray-600 dark:text-gray-300 mb-12">
      Estimate how much you can save using various money-saving strategies and tools.
    </p>
    
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {calculators.map((calc) => (
        <Card
          title={calc.title}
          description={calc.description}
          href={calc.href}
        />
      ))}
    </div>
  </div>
</Layout>
